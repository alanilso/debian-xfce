alias upd="sudo apt update"
alias upg="sudo apt upgrade"
alias nf="neofetch" 
alias ..="cd .."
alias ins="sudo apt install"
alias ls="exa"
alias lsl="exa -l"
alias lsla="exa -la"
alias purge="sudo apt purge"
alias aur="sudo apt autoremove"
alias auc="sudo apt autoclean"
alias sou="sudo micro /etc/apt/sources.list"
alias motsta="sudo systemctl start motion.service"
alias motsto="sudo systemctl stop motion.service"
alias reb="sudo reboot"
alias des="sudo poweroff"
alias sdb="sudo mount -t ntfs-3g /dev/sdb1 /mnt/hd_externo"
alias umo="sudo umount -t ntfs-3g /dev/sdb1 /mnt/hd_externo"
